#!/bin/sh

ismuted=$(pactl list sinks | grep '^[[:space:]]Mute: ' | grep -o '[^\: ]*$')

# echo $ismuted
[[ "$ismuted" == "yes" ]] && echo -e "ğŸ”‡" && exit;  

vol=$(pactl list sinks | grep '^[[:space:]]Volume:' | \
    head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')

if [ "$vol" -gt "70" ]; then
	icon="ğŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ğŸ”ˆ"
else
	icon="ğŸ”‰"
fi
printf "%s %s%%\\n" "$icon" "$vol"


